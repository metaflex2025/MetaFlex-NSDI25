<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
    <display-name>Enyx Inspector</display-name>
    <context-param>
        <param-name>tapestry.app-package</param-name>
        <param-value>com.enyx.tools.inspector.web</param-value>
    </context-param>
    <!-- Specify some additional Modules for two different execution modes: development and qa. Remember that the default 
        execution mode is production -->
    <context-param>
        <param-name>tapestry.development-modules</param-name>
        <param-value>
            com.enyx.tools.inspector.web.services.DevelopmentModule
        </param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.mock-modules</param-name>
        <param-value>
            com.enyx.tools.inspector.web.services.DevelopmentModule,com.enyx.tools.inspector.business.services.DevMockModule
        </param-value>
    </context-param>
    <context-param>
        <param-name>tapestry.production-modules</param-name>
        <param-value>com.enyx.libraries.tapestry.module.EnyxBusinessProdModule</param-value>
    </context-param>
    <filter>
        <filter-name>enyxInspector</filter-name>
        <filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>enyxInspector</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
      
